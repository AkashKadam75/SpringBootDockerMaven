pipeline {

	  
    agent any
    
    stages{
        
        stage('Compile Stage') {
                           
                           steps {
                               
                               withMaven(maven : 'MAVEN_3_5') {
                             		sh 'sudo mvn clean install'    
                               }

                           }

       	}
       	
       	stage('Testing Stage') {
                           
                           steps {
                               
                               withMaven(maven : 'MAVEN_3_5') {
                             		sh 'sudo mvn clean test'    
                               }
	
                           }

       	}
       	
       	stage('Build Stage') {
                           
                           steps {
                               
                               withMaven(maven : 'MAVEN_3_5') {
									sh 'sudo mvn docker:build'   

                               }

                           }

       	}
    }

}
